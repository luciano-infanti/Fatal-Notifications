{
  "name": "fatal-notifications",
  "version": "1.0.0",
  "description": "A desktop app that monitors TeamSpeak 3 for bot messages and sends push notifications via Pushbullet.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable",
    "build:exe": "electron-builder --win nsis"
  },
  "author": "sickn33",
  "license": "MIT",
  "build": {
    "appId": "com.fatalnotifications.app",
    "productName": "Fatal Notifications",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName} Setup ${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}