{
  "name": "fatal-notifications",
  "version": "1.0.4",
  "description": "A desktop app that monitors TeamSpeak 3 for bot messages and sends push notifications via Pushbullet.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:exe": "electron-builder --win nsis"
  },
  "author": "sickn33",
  "license": "MIT",
  "build": {
    "appId": "com.fatalnotifications.app",
    "productName": "Fatal Notifications",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Fatal-Notifications-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "luciano-infanti",
        "repo": "Fatal-Notifications"
      }
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  }
}